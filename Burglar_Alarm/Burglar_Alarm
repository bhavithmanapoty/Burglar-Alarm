void setup() {
  // put your setup code here, to run once:
  pinMode(3, OUTPUT); //initialize the buzzer as output
  pinMode(4,INPUT);  //initialize the PIR Sensor as input
  Serial.begin(9600); //Begin serial communication
}


void loop() {
  // put your main code here, to run repeatedly:
  if (digitalRead(4)==HIGH){   //Condition to check if the PIR    Sensor has detected motion
    digitalWrite(3,HIGH);  // Set the Buzzer pin to HIGH, i.e., switch on the buzzer                                           
    delay(100);            //Wait for 100ms
    digitalWrite(3,LOW);   // Set the Buzzer pin to LOW, i.e., switch off the buzzer
    delay(100); //Wait for 100ms
    Serial.println("HIGH");
}
}
